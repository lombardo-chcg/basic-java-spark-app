{{#partial "content"}}
    {{#if username  }}
        <h1>Welcome, {{ username }}!</h1>

        <p><a href="/ideas">View All Course Ideas</a></p>
    {{ else }}
        <h1>Welcome, Students!</h1>
        <form action="/sign-in" method="post">
            <input type="text" placeholder="Enter your name" name="username" />
            <button>Sign In</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}